{
  "manifest_version": 3,
  "name": "YouTube Game Review",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/watch*"
  ],
  "background":{
    "service_worker": "background.js"
  }
}